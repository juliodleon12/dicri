{
  "openapi": "3.0.0",
  "info": {
    "title": "DICRI API",
    "version": "1.0.0",
    "description": "API REST para gestión de expedientes e indicios."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/usuarios/login": {
      "post": {
        "summary": "Login de usuario",
        "tags": ["Usuarios"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso"
          },
          "400": {
            "description": "Credenciales inválidas"
          }
        }
      }
    }
  }
}
